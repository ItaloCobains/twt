<h1>Logado</h1>
<%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete }, class: 'btn btn-primary btn-lg' %>

<%= form_with model: Tweet.new, url: tweets_path, method: :post, local: true do |f| %>
    <%= f.text_field :body %>
    <%= f.submit %>
<% end %>

<ul>
    <% Tweet.find_each do |tweet| %>
        <li><%= tweet.body %></li>
    <% end %>
</ul>